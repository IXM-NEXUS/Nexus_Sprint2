<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Contact_Mandatory_for_Case_Closing</fullName>
    <active>false</active>
    <errorConditionFormula>AND( ISPICKVAL(Status, &apos;Closed&apos;),OR( 
ISBLANK(Cause_Code__c),ISBLANK (ContactId)))</errorConditionFormula>
    <errorMessage>Case has to be associated with a contact,defect code and cause code before you can close the Case</errorMessage>
</ValidationRule>
